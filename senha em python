import os

user = {}

def create_user():
    os.system('cls')
    print('Criar usuario')
    name = input('Digite seu nome: ')
    password = input('Digite seua senha: ')
    return name, password

def login(user):
    os.system('cls')
    print('Login')
    name = input('Digite seu nome: ')
    password = input('Digite sua senha: ')

    if name in user and user[name] == password:
         print('Login feito')
         
    else:
         print('Usuário ou senha incorreto')
     
while True:
     
     print('1 - Criar usuário')
     print('2 - Fazer login')
     print('3 - sair')

     user_choice_str = input('Escolha uma opção: ')
     try:
          user_choice = int(user_choice_str)

          if user_choice == 1:
               name, password = create_user()
               user[name] = password
               print('Cadastro bem sucedido')
          elif user_choice == 2:
               login(user)
               break
          elif user_choice == 3:
               print('Login encerrado')
               break
          else:
               print('Opção inválida')
     except ValueError:
          print('Digite apenas números')
     except:
          print('Erro descnhecido')
